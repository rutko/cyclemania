%p#notice= notice
%h1 User Posts
%table
  %thead
    %tr
      %th Id
      %th Name
      %th Title
      %th Body
      %th Update at
      %th{:colspan => "3"}
  %tbody
    - @user_posts.each do |user_post|
      %tr
        %td= user_post.id
        %td= user_post.name
        %td= user_post.title
        %td= user_post.body
        %td= user_post.update_at
        %td= link_to 'Show', user_post
        %td= link_to 'Edit', edit_user_post_path(user_post)
        %td= link_to 'Destroy', user_post, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User Post', new_user_post_path
