.content_inner
  %h1 MEMBER募集
  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th タイトル
        %th 内容
        %th{:colspan => "3"}
    %tbody
      - @posts.each do |post|
        %tr
          %td= post.title
          %td= post.body
          %td= link_to '詳細', post
          %td= link_to '編集', edit_post_path(post)
          %td= link_to '削除', post, method: :delete, data: { confirm: '削除しますか？' }
  %br/
  = link_to '新規投稿', new_post_path
